<Window x:Name="window" x:Class="PingPong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPong"
        mc:Ignorable="d"
        Title="MainWindow" Loaded="Window_Loaded"
        WindowState="Maximized"
        WindowStyle="None" KeyDown="Window_KeyDown"
 >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="canvas" Grid.ColumnSpan="2" Margin="0,0,-8,0">
            <Label x:Name="score" Content="Score:" Canvas.Left="53" Canvas.Top="36" Height="34" Width="227" FontSize="20" FontWeight="Bold"/>
        </Canvas>
        <Label x:Name="paused" Content="Pause" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="282,144,0,0" Height="93" Width="196" FontSize="36" FontFamily="Segoe UI Semibold"/>

    </Grid>
</Window>
